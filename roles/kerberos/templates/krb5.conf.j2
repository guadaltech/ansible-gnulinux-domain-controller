[logging]
 default = FILE:/var/log/krb5libs.log
 kdc = FILE:/var/log/krb5kdc.log
 admin_server = FILE:/var/log/kadmind.log

[libdefaults]
 default_realm = {{ realm_name|upper() }}
 dns_lookup_realm = false
 dns_lookup_kdc = false
 ticket_lifetime =  {{ ticket_lifetime }}
 renew_lifetime = {{ renew_lifetime }}
 forwardable = true
 ignore_acceptor_hostname = {{ ignore_acceptor_hostname }}

[realms]
 {{ realm_name| upper() }} = {
  kdc = kerberos.{{ realm_name|lower() }}
  admin_server = kerberos.{{ realm_name|lower() }}
 }

[domain_realm]
 .{{ realm_name|lower() }} = {{ realm_name|upper() }}
  {{ realm_name|lower() }} = {{ realm_name|upper() }}
